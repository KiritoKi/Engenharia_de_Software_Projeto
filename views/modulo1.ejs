<%- include("head.ejs"); %>

<body class="page-body">
    <%- include("navbar.ejs"); %>

    <div class="floating-form">
        <input class="back-button" type="button" onclick="history.back()" />
        <h1 class="form-title">Projetos</h1>

        <div class="center-items">
            <a class="no-decoration-link" href="/<%=id_user%>/project">
                <div class="head-button">Novo projeto</div>
            </a>
        </div>

        <table class="table table-striped table-lg">
            <thead>
                <tr>
                    <th>NÂº</th>
                    <th>Nome</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for (const item of data){ %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.nome %></td>
                    <td>
                        <a
                            class="custom-button"
                            href="/<%=id_user%>/view/project/<%= item.id %>"
                            >View</a
                        >
                        <a
                            class="custom-button"
                            href="/<%=id_user%>/project/<%= item.id %>"
                            >Edit</a
                        >
                        <a
                            class="custom-button"
                            href="/<%=id_user%>/delete/project/<%= item.id %>"
                            >Delete</a
                        >
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
